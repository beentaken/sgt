#{{{ fix tput weirdnesses

# Local tput wrapper which doesn't object to $TERM being unset...
_bashrc_tput() {
  test -n "$TERM" && tput "$@"
}
# ... and for some reason I sometimes get $TERM set _but not
# exported_, boggle.
export TERM

